{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended",
        "plugin:prettier/recommended",
        "plugin:unicorn/recommended",
        "plugin:mocha/recommended"
    ],
    "plugins": ["mocha", "jsdoc"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "settings": {
        "jsdoc": {
            "mode": "jsdoc",
            "preferredTypes": {
                "array": "Array",
                "array.<>": "[]",
                "Array.<>": "[]",
                "array<>": "[]",
                "Array<>": "[]",
                "Object": "object",
                "object.<>": "Object.<>",
                "object<>": "Object.<>",
                "Object<>": "Object.<>",
                "set": "Set",
                "set.<>": "Set.<>",
                "set<>": "Set.<>",
                "Set<>": "Set.<>",
                "promise": "Promise",
                "promise.<>": "Promise.<>",
                "promise<>": "Promise.<>",
                "Promise<>": "Promise.<>"
            }
        }
    },
    "rules": {
        "unicorn/prefer-module": "off",
        "unicorn/numeric-separators-style": "off",
        "jsdoc/check-line-alignment": 2,
        "jsdoc/require-jsdoc": [
            "warn",
            {
                "require": {
                    "FunctionDeclaration": true,
                    "MethodDefinition": true,
                    "ClassDeclaration": true,
                    "ArrowFunctionExpression": false,
                    "FunctionExpression": true
                }
            }
        ]
    }
}
