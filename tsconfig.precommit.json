{
    "include": ["lib/**/*.js"],
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2022",
        "checkJs": true,
        "skipLibCheck": true,
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "@types",
        "declarationMap": true
    }
}
